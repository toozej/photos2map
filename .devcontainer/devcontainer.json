{
    "name": "Go Dev Container with LLM Support",
    "build": {
        "dockerfile": "../Dockerfile",
        "target": "build"
    },
    "remoteEnv": {
        "PATH": "${containerEnv:PATH}:/root/.local/bin/:/go/bin/"
    },
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/python:1": {
            "version": "latest"
        }
    },
    "postCreateCommand": "make pre-commit-install && pip install uv && uv tool install llm && llm install llm-github-models && llm models default github/gpt-4.1",
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go",
                "ms-azuretools.vscode-docker",
                "GitHub.vscode-github-actions",
                "redhat.vscode-yaml",
                "ms-vscode.makefile-tools",
                "GitHub.copilot"
            ],
            "settings": {
                "go.toolsManagement.checkForUpdates": "local",
                "go.useLanguageServer": true,
                "go.gopath": "/go",
                "go.goroot": "/usr/local/go"
            }
        }
    }
}